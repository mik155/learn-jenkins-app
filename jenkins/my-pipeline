pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:latest'
                    reuseNode true
                }
            }
            steps {
                sh 'ls -la'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la'
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:latest'
                    reuseNode true
                }
            }

            steps {
                sh 'test -f build/index.html'
                sh 'npm test'
            }
        }
    }
}
