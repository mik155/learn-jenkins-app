pipeline {
    agent any
    environment {
        MY_SECRET = 'IS MY DESIRE'
    }

    stages {
        stage('hello-from-gh-repo') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh '''
                    ls -la
                    npm --version
                    npm ci
                    npm run build
                '''
            }
        }
    }
  
}
